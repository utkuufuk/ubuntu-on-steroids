
{
    // INTELLICODE
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    // WINDOW
    "window.titleBarStyle": "custom",
    "window.openFilesInNewWindow": "on",

    // WORKBENCH
    "workbench.colorTheme": "Dracula",
    "workbench.colorCustomizations": {
        "[Winter is Coming (Dark Blue - No Italics)]": {
            "editor.lineHighlightBackground": "#234",
            "editor.lineHighlightBorder": "#123"
        },
        "[Dracula]": {
            "tab.activeBackground": "#40598874",
            "tab.inactiveForeground": "#aaa",
            "editor.lineHighlightBackground": "#334"
        },
        "[Monokai]": {
            "tab.activeBackground": "#22882274",
            "tab.activeBorder": "#7e8822",
            "editor.lineHighlightBorder": "#333"
        }
    },
    "workbench.editor.closeEmptyGroups": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "newUntitledFile",

    // TERMINAL
    "terminal.integrated.fontFamily": "'Hack', 'monospace', monospace, 'Droid Sans Fallback'",
    "terminal.integrated.fontSize": 16,

    // BREADCRUMBS
    "breadcrumbs.enabled": false,

    // EXPLORER
    "explorer.openEditors.visible": 0,
    "explorer.sortOrder": "filesFirst",

    // EDITOR
    "editor.copyWithSyntaxHighlighting": false,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.fontFamily": "'Fira Code Retina', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.rulers": [100],
    "editor.suggestSelection": "first",
    "editor.wordWrapColumn": 100,
    "editor.detectIndentation": false,
    "[yaml]": {
        "editor.formatOnSave": false
    },
    "[markdown]": {
        "editor.formatOnSave": false
    },
    "[jsonc]": {
        "editor.formatOnSave": false
    },
    
    "blade.format.enable": true,

    // PRETTIER
    "prettier.arrowParens": "always",
    "prettier.bracketSpacing": false,
    "prettier.jsxBracketSameLine": true,
    "prettier.jsxSingleQuote": true,
    "prettier.printWidth": 100,
    "prettier.singleQuote": true,
    "prettier.tabWidth": 2,
    "prettier.trailingComma": "es5",

    // VIM
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "d"],
            "after": ["d", "d"]
        },
        {
            "before": ["<leader>", "<leader>"],
            "commands": [":nohl"]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["Y"],
            "after": ["y", "$"]
        }
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
}

